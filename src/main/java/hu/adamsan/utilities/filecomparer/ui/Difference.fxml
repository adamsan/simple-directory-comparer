<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TitledPane?>

<BorderPane onMouseClicked="#mouseClick" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.adamsan.utilities.filecomparer.ui.DifferenceController">

	<top>
		<ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER_LEFT">
			<buttons>
				<Button fx:id="changeFirstBtn" mnemonicParsing="true" onAction="#changeFirstClick" text="Change _First" ButtonBar.buttonData="LEFT" />
				<Button fx:id="changeSecondBtn" mnemonicParsing="true" onAction="#changeSecondClick" text="Change _Second" ButtonBar.buttonData="LEFT" />
				<Button mnemonicParsing="false" text="History" ButtonBar.buttonData="LEFT" />
				<Button mnemonicParsing="false" text="Clear history" ButtonBar.buttonData="LEFT" />
			</buttons>
		</ButtonBar>
	</top>
	<center>
		<HBox>
			<TableView fx:id="firstTable" prefHeight="368.0" prefWidth="458.0" BorderPane.alignment="CENTER">
				<columns>
					<TableColumn fx:id="firstColumn" prefWidth="150.0" text="First" />
				</columns>
			</TableView>
			<TableView fx:id="secondTable" prefHeight="368.0" prefWidth="458.0" BorderPane.alignment="CENTER">
				<columns>
					<TableColumn fx:id="secondColumn" prefWidth="150.0" text="Second" />
				</columns>
			</TableView>
			<TableView fx:id="differenceTable" prefHeight="368.0" prefWidth="458.0" BorderPane.alignment="CENTER">
				<columns>
					<TableColumn fx:id="differenceColumn" prefWidth="150.0" text="Missing from Second" />
				</columns>
			</TableView>
		</HBox>
	</center>
	<bottom>
		<TitledPane text="History" fx:id="historyPane">
			<VBox fx:id="historyVBox" maxWidth="370.0" prefWidth="370.0" minWidth="370.0" />
		</TitledPane>
	</bottom>
</BorderPane>
